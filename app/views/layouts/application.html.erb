<!DOCTYPE html>
<html>
  <head>
    <title>APIs THP 2018</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="icon" href='https://help.apiary.io/images/swagger-logo.png' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">

    <% if current_page?(google_path_url) %>
    <%= stylesheet_link_tag    'static_pages', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'google', 'data-turbolinks-track': 'reload' %>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['API_GOOGLE']%>&callback=initMap">
    </script>
    <% elsif current_page?(twitch_path_url) %>
    <script src="https://ajax.googleapis.com/ajax/libs/dojo/1.13.0/dojo/dojo.js"></script>
    <%= stylesheet_link_tag    'static_pages', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'twitch', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'twitch', 'data-turbolinks-track': 'reload' %>
    <% elsif current_page?(root_path) %>
    <%= stylesheet_link_tag    'static_pages', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-119771500-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-119771500-1');
    </script>

  </head>

  <body onLoad=" LoadOnce()">
    <%= render 'layouts/header' %>
    <% if flash[:notice] %>
      <%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <%= flash[:error] %></p>
    <% end %>
    <% flash[:error] = flash[:notice] = nil %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
